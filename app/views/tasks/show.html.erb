<div>
  <h1 class="body-bg"><%= @task.title %></h1>
  <h2><%= @task.details %></h2>
  <h2><%= @task.completed %></h2>
  <div class="flex-d">
    <%= link_to 'Edit Task', edit_task_path(@task.id), class: "text-decoration-none" %>
    <%= link_to 'Delete Task', task_path(@task.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "text-decoration-none" %>
    <%= link_to 'Tasks', tasks_path, class: "text-decoration-none" %>
  </div>
</div>
